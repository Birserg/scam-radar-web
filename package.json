{
  "name": "scam-radar-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:github": "GITHUB_PAGES=true NODE_ENV=production next build",
    "build:vercel": "NODE_ENV=production next build",
    "build:static": "next build && npm run validate-static",
    "validate-static": "node scripts/validate-static.js",
    "indexnow": "node scripts/indexnow.js",
    "indexnow:submit": "npm run build && node scripts/indexnow.js",
    "indexnow:static": "npm run build && node -e \"import('./scripts/indexnow.js').then(m => m.copyApiKeyToStaticExport(process.env.INDEXNOW_API_KEY))\"",
    "vercel:deploy": "npm run build:static && npm run indexnow:static && vercel --prod",
    "vercel:build": "npm run build:static && npm run indexnow:static",
    "start": "next start",
    "lint": "next lint",
    "export": "next export",
    "deploy": "npm run build:static && npm run indexnow:static && touch out/.nojekyll"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.16.0",
    "html-react-parser": "^5.2.5",
    "lucide-react": "^0.513.0",
    "next": "^15.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "sharp": "^0.34.2",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "20.19.1",
    "@types/react": "19.1.8",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^15.3.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5"
  }
}
